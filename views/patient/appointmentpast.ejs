<div class="container">
  <div class="row mt-5">
      <div class="col m-auto">
        <div class="card card-body border-light shadow">
          <h1 class="text-center mb-3"><i class="fas fa-book-medical"></i>  Randevu Geçmişi</h1>
          <div class="card mt-2">
              <div class="card-header">
                Geçmiş Randevularınız
              </div>
              <div class="card-body">
                <table class="table">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">Klinik</th>
                      <th scope="col">Doktor</th>
                      <th scope="col">Tarih</th>
                      <th scope="col">Reçete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% appo.forEach((item)=> { %>
                      <% if( (item.date.getMonth() < d.getMonth() && item.date.getFullYear() <= d.getFullYear()) || (item.date.getMonth()==d.getMonth() && item.date.getDate()<=d.getDate()&& item.date.getFullYear() <= d.getFullYear())  || (item.date.getMonth()==d.getMonth() && item.date.getDate()==d.getDate()&& item.date.getFullYear() <= d.getFullYear() && item.date.getHours() <= d.getHours() ) ){ %>
                      <tr>
                        <td scope="row"> <%=item.polyclinicName%>  </td>
                        <td><%=item.doctorName%></td>
                        <td><%=item.date.getFullYear()%> - <%=(item.date.getMonth()+1)%> - <%=item.date.getDate()%> Saat: <%=(item.date.getHours()-3)%>:<%=item.date.getMinutes()%></td>
                        <% if(!item.appointmentResult) {%>
                        <td>Reçete Bilgisi Girilmemiştir</td>
                        <% } %>
                        <% if(item.appointmentResult) {%>
                          <td><%=item.appointmentResult%></td>
                        <% } %>
                      </tr>
                      <% } %>
                    <% }) %>                      
                  </tbody>
                </table>
              </div>
              <div class="card-footer text-muted">
                <div class="row">
                  <div class="col pt-2">
                    <p>Toplam Sayfa: <span class="badge-primary p-1 pl-2 pr-2"><%= pages %></span></p>
                  </div>
                  <div class="col">
                    <% if (pages > 0) { %>
                      <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                          <% if (current == 1) { %>
                            <li class="page-item disabled"><a class="page-link" >İlk</a></li>
                          <% } else { %>
                            <li class="page-item "><a class="page-link" href="/patients/appointment-past/1"  tabindex="-1">İlk</a></li>
                          <% } %>
                          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                          <% if (i !== 1) { %>
                            <li class="page-item disabled"><a class="page-link" >...</a></li>
                          <% } %>
                          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                              <% if (i == current) { %>
                                  <li class="page-item active"><a class="page-link" ><%= i %></a></li>
                              <% } else { %>
                                  <li class="page-item "><a class="page-link" href="/patients/appointment-past/<%= i %>"><%= i %></a></li>
                              <% } %>
                              <% if (i == Number(current) + 4 && i < pages) { %>
                                  <li class="page-item disabled"><a class="page-link" >...</a></li>
                              <% } %>
                          <% } %>
                          <% if (current == pages) { %>
                              <li class="page-item disabled"><a class="page-link" >Son</a></li>
                          <% } else { %>
                              <li class="page-item "><a class="page-link" href="/patients/appointment-past/<%= pages %>">Son</a></li>
                          <% } %>
                      </ul>
                  <% } %>
                  </div>
              </div>
      </div>
  </div>
</div>
       
