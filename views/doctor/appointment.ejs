
<link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" rel="stylesheet" />
<div class="col-md-4 m-auto">
<div class="container ">
    <div class="card card-body border-light shadow mt-4">
      <div class="row">
        <div class="col">
          <p>Hasta Adı: <%= user.name%></p>
          <form action="/doctor/appointment" method="POST" class="form-group">
            <div class="form-group">
              <!--Hasta TC-->
              <label class="my-1 mr-2" for="hastaTC">Hasta TC</label>
              <input name="hastaTC" type="text" id="hastaTC" class="form-control" value=<%=user.TC%>> 
            </div>
            <!--TARİH-->
            <div class="form-group">
              <!--date time-->
              <label class="my-1 mr-2" for="date">Randevu Tarihi</label>
              <input name="date" type="text" id="datePicker" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary btn-block my-1">
              Randevu Ver
            </button>
            <%- include ('../partials/messages') %>
          </form>
  
        </div></div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $('#datePicker').datetimepicker({
        timepicker: true,
        datepicker: true,
        format: 'Y-m-d H:i',
        value: '10-03-2020 09:00',
