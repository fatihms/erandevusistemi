<div class="container">
    <div class="card card-body border-light shadow mt-4">
      <div class="row">

        <div class="col bg-light">
          <h1 class="text-center mb-3 mt-3">
            <i class="fas fa-user"></i> Kullanıcı Bilgileriniz
          </h1>
          <span><hr/></span>
         <div class="row">
             <div class="col">
                <h6 class="text-left mb-3 ml-5">
                    <i class="fas fa-user pr-2"></i> Ad 
                </h6>  
             </div>
             
             <div class="col">
                : <%= doctor.doctorName %>
            </div>
         </div>

         <div class="row">
            <div class="col">
               <h6 class="text-left mb-3 ml-5">
                   <i class="fas fa-user pr-2"></i> Soyad 
               </h6>  
            </div>
            
            <div class="col">
               : <%= doctor.doctorSurname %>
           </div>
        </div>

        
        <div class="row">
            <div class="col">
               <h6 class="text-left mb-3 ml-5">
                   <i class="fas fa-envelope pr-2"></i> E-mail 
               </h6>  
            </div>
            
            <div class="col">
               : <%= doctor.email %>
           </div>
        </div>

        
        <div class="row">
            <div class="col">
               <h6 class="text-left mb-3 ml-5">
                   <i class="fas fa-hospital-user pr-2"></i> Klinik 
               </h6>  
            </div>
            
            <div class="col">
               : <%= doctor.polyclinicName %>
           </div>
        </div>


        <div class="row">
            <div class="col">
               <h6 class="text-left mb-3 ml-5">
                   <i class="fas fa-calendar-alt pr-2"></i> Kayıt Tarihi 
               </h6>  
            </div>
            
            <div class="col">
                : <%= doctor.date %>
           </div>
        </div>

        </div>


        <div class="col">
          <h1 class="text-center mb-3 mt-3">
            <i class="fas fa-sign-in-alt "></i> Bilgilerini Güncelle
          </h1>
          <span><hr/></span>
          <p class="bg-light p-2 alert-warning ">* Sadece güncellemek istediğiniz alanları değiştirin lütfen.</p>
          <form action="/patients/patient" method="POST">
            <div class= "row">
                <div class="col">
                    <div class="form-group">
                        <label for="name" class="font-weight-bold">Ad</label>
                        <input
                          type="name"
                          id="name"
                          name="name"
                          class="form-control"
                          placeholder="Yeni adınızı giriniz"
                          value=<%= doctor.doctorName %>
                        />
                      </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="surname" class="font-weight-bold">Soyad</label>
                        <input
                          type="surname"
                          id="surname"
                          name="surname"
                          class="form-control"
                          placeholder="Yeni soyadınızı giriniz"
                          value=<%= doctor.doctorSurname %>
                        />
                      </div>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="font-weight-bold">E-mail</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Yeni emailinizi giriniz"
                  value=<%= doctor.email %>
                />
              </div>
          
            <button type="submit" class="btn btn-primary btn-block">
              Güncelle
            </button>
          </form>
          
        </div>

     </div>
 </div>
</div>
      